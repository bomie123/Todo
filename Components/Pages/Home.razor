@page "/"
@using TodoApp.Helpers
@using TodoApp.Models
@using TodoApp.Models.DataModels

<table class="table">
    <thead>
        <tr>
            <th style="width: 10%"></th>
            <th style="width:65%">Task</th>
            <th style="width: 25%">Timeline</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in DatabaseHelper.GetData<TodoRecord>().Where(x => x.Show).OrderBy(x => x.CurrentImportance))
        {
            <tr>
                <td>
                     <input type="checkbox" class="todoChecker"/>
                </td>
                <td>@todo.Label</td>
                <td>@todo.HumanReadableTimeframe</td>
            </tr>
        }
    </tbody>
</table>  