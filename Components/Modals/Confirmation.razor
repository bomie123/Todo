<h3>Are you sure you want to delete this?</h3>
<input style="margin-top: 20px; float: right ;" type="submit" class="btn btn-primary" value="Save" @onclick="async ()=> await BlazoredModal.CloseAsync(ModalResult.Ok())" />
<input style="margin-top: 20px; float: right ;" type="submit" class="btn btn-secondary" value="Cancel" @onclick="async () => await BlazoredModal.CloseAsync(ModalResult.Cancel())" />


@code {
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; } = default!;

    private async Task FinishConfirmation(bool success)
        => await BlazoredModal.CloseAsync(success? ModalResult.Ok() : ModalResult.Cancel());

   

}
